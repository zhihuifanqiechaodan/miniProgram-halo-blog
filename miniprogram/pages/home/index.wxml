	<!-- 文章 -->
	<view class="article-wrapper">
		<!-- 文章提示 -->
		<view class="sort-title">
			<view class="sort-desc">
				<text class="latest-article">Latest/Browse</text>
				<text class="latest-desc">Most recent and most viewed articles</text>
			</view>
			<view class="sort-tag">
				<text class="new-gradient-anime">New!</text>
			</view>
		</view>

		<view class="article-list">
			<block wx:for="{{articles}}" wx:key="id">
				<custom-article articleInfo="{{item}}" />
			</block>
			<custom-nomore/>
		</view>
	</view>

</view>

