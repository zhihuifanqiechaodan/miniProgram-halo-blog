/* pages/home/components/menu-popup/index.wxss */
.menu-popup {
}

.header {
  display: flex;
  justify-content: space-between;
  padding: 40rpx;
  background-color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
}

.user {
  padding-left: 24rpx;
}

.name {
  font-weight: 500;
  font-size: 30rpx;
}

.email {
  font-size: 24rpx;
}

.dashbord-wrapper {
  padding: 40rpx;
}

.group {
  display: flex;
  justify-content: space-between;
  column-gap: 30rpx;
}

.group:first-child {
  margin-bottom: 24rpx;
}

.dashbord-grop {
  width: 100%;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  border: 2rpx solid #efeff6;
  background-color: #ffffff;
}

.media {
  display: flex;
}

.icon-wrapper {
  width: 70rpx;
  height: 70rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background-color: rgba(255, 112, 44, 0.1);
}

.media-body {
  flex: 1;
  padding-left: 36rpx;
}

.media-title {
  font-size: 28rpx;
}

.media-count {
  color: #9498ac;
  font-size: 24rpx;
}
